{% set otherLang = "fr" if locale == "en" else "en" %}

{% if settings.env === "dev" %}
	{% include "partials/pageLabel.njk" %}
{% endif %}

<section class="alert alert-warning mrgn-tp-lg">
	<h2>{{ alerts[locale].alertHeading }}</h2>
	<ul>
		<li class="mrgn-tp-lg">{{ alerts[locale].underConstText | safe }}</li>
	{% if isDraft == true %}
		<li class="mrgn-tp-lg">{{ alerts[locale].draftText }}</li>
	{% endif %}
	{% if needsTranslation == true %}
		<li class="mrgn-tp-lg" lang="{{ otherLang }}">{{ alerts[locale].translationText }}</li>
	{% endif %}
	{% if internalLinks == true %}
		<li class="mrgn-tp-lg">{{ alerts[locale].internalLinkText }}<i class="fas fa-external-link-square-alt" aria-hidden="true"> {{ alerts[locale].icon }}</i><span class="wb-inv">{{ alerts[locale].hiddenTextLink }}</span></li>
	{% endif %}
	</ul>
</section>
