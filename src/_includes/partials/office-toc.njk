{% if locale === "en" %}
	{% set indexSlug = "how-to-create-accessible-documents-in-office-" %}
	{% set indexTitle = "How to create accessible documents" %}
	{% set inOffice = "in Office" %}
{% else %}
	{% set indexSlug = "comment-creer-des-documents-accessibles-dans-office-" %}
	{% set indexTitle = "Comment cr√©er des documents accessibles" %}
	{% set inOffice = "dans Office" %}
{% endif %}

{% if tags[1] === "office2016" or page.fileSlug === indexSlug + "2016" %}
	{% set version = 2016 %}
	{% set otherVersion = 365 %}
	{% set collections = collections.office2016 %}
{% endif %}
{% if tags[1] === "office365" or page.fileSlug === indexSlug + "365" %}
	{% set version = 365 %}
	{% set otherVersion = 2016 %}
	{% set collections = collections.office365 %}
{% endif %}

{% if officeTOC === true %}
	{% set indexSlug = indexSlug + version %}
	{% set indexURL = "/" + locale + "/" + indexSlug + "/" %}
	<div class="gc-stp-stp">
	<div class="toc row mrgn-tp-lg">
		<ul class="wb-eqht-grd">
			<li class="col-md-4 col-sm-6"><a class="list-group-item{% if page.url === indexURL %} active{% endif %}"{% if page.url===indexURL %} aria-current="page"{% endif %}{% if page.url !=indexURL %} href="/{{ locale }}/{{ indexSlug }}/"{% endif %}>{{ indexTitle }}<small class="visible-xs-block visible-sm-block visible-md-block visible-lg-block">{{ inOffice }} {{ version }}</small></a></li>
			<li class="col-md-4 col-sm-6"><a class="list-group-item" href="/{{ locale }}/{{ indexSlug | replace(version,otherVersion) }}/">{{ indexTitle }}<small class="visible-xs-block visible-sm-block visible-md-block visible-lg-block"><strong></strong>{{ inOffice }} {{ otherVersion }}</strong></small></a></li>
			{% for item in collections | localeMatch(locale) %}
				{% set title = item.data.title if locale === "en" else item.data.title %}
				<li class="col-md-4 col-sm-6" {% if page.url==item.url %} aria-current="page" {% endif %}><a class="list-group-item{% if page.url == item.url %} active{% endif %}"{% if page.url !=item.url %} href="{{ item.url }}"{% endif %}>{{ title| replace(inOffice + " " + version,"") }}<small class="visible-xs-block visible-sm-block visible-md-block visible-lg-block">{{ inOffice }} {{ version }}</small></a></li>
			{% endfor %}
		</ul>
	</div>
	</div>
{% endif %}
